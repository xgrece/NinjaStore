@model TiendaSoftware1.Models.Usuario

@{
    ViewData["Title"] = "DeleteUsuario";
}

<h1>DeleteUsuario</h1>

<div class="col-md-4">
    <h4>¿Estás seguro de que deseas eliminar a este usuario?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

<form asp-action="DeleteUsuarioConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="GestionUsuarios" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
</div>
